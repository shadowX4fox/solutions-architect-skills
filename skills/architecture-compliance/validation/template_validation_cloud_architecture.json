{
  "contract_type": "cloud_architecture",
  "contract_name": "Cloud Architecture",
  "template_file": "TEMPLATE_CLOUD_ARCHITECTURE.md",
  "version": "1.0.0",
  "validations": {
    "compliance_summary_table": {
      "enabled": true,
      "severity": "BLOCKING",
      "requirement_count": 6,
      "column_validation": {
        "columns": [
          {
            "name": "Code",
            "pattern": "^LAC\\d+$",
            "required": true
          },
          {
            "name": "Requirement",
            "max_length": 100,
            "required": true
          },
          {
            "name": "Category",
            "allowed_values": [
              "Cloud Architecture",
              "Cloud Deployment",
              "Cloud Provider",
              "Cost Management",
              "Scalability",
              "Multi-Cloud Strategy"
            ],
            "required": true
          },
          {
            "name": "Status",
            "allowed_values": ["Compliant", "Non-Compliant", "Not Applicable", "Unknown"],
            "required": true
          },
          {
            "name": "Source Section",
            "pattern": "^(\\d+\\.\\d+|Not documented)$",
            "required": true
          },
          {
            "name": "Responsible Role",
            "required": true
          }
        ]
      }
    },
    "status_value_standardization": {
      "enabled": true,
      "severity": "BLOCKING",
      "allowed_values": ["Compliant", "Non-Compliant", "Not Applicable", "Unknown"],
      "case_sensitive": true,
      "common_errors": {
        "compliant": "Compliant",
        "non-compliant": "Non-Compliant",
        "not applicable": "Not Applicable",
        "unknown": "Unknown",
        "N/A": "Not Applicable",
        "Pass": "Compliant",
        "Fail": "Non-Compliant"
      }
    },
    "appendix_structure": {
      "enabled": true,
      "severity": "BLOCKING",
      "required_appendices": ["A.1", "A.2", "A.3", "A.4"],
      "strict_order": true
    },
    "forbidden_section_numbering": {
      "enabled": true,
      "severity": "BLOCKING",
      "forbidden_patterns": [
        "### A\\.5",
        "### A\\.6",
        "### A\\.7",
        "### A\\.8",
        "### A\\.9"
      ],
      "error_message": "Sections after A.4 must be H2 headers WITHOUT numbering. Found: {pattern}. Correct format: '## Section Name' (not '### A.X Section Name')"
    },
    "document_control_table": {
      "enabled": true,
      "severity": "BLOCKING",
      "required_table_pattern": "\\| Field \\| Value \\|",
      "required_fields": [
        "Document Owner",
        "Last Review Date",
        "Status",
        "Validation Score",
        "Approval Authority"
      ],
      "error_message": "Document Control section must use table format with | Field | Value | structure. Found list format instead of table."
    },
    "compliance_calculation": {
      "enabled": true,
      "severity": "BLOCKING",
      "total_requirements": 6,
      "percentage_tolerance": 0,
      "completeness_tolerance": 1
    },
    "template_completeness": {
      "enabled": true,
      "severity": "BLOCKING",
      "required_sections": [
        "header",
        "document_control",
        "compliance_summary",
        "overall_compliance",
        "appendix_a1_a4",
        "dynamic_sections"
      ]
    }
  },
  "error_messages": {
    "table_row_count_mismatch": "Cloud Architecture requires exactly 6 requirement rows. Found {actual} rows."
  }
}
