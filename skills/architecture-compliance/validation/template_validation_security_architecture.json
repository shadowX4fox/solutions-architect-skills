{
  "contract_type": "security_architecture",
  "contract_name": "Security Architecture",
  "template_file": "TEMPLATE_SECURITY_ARCHITECTURE.md",
  "version": "1.0.0",
  "validations": {
    "compliance_summary_table": {
      "enabled": true,
      "severity": "BLOCKING",
      "requirement_count": 56,
      "column_validation": {
        "columns": [
          {
            "name": "Code",
            "pattern": "^LAS\\d+$",
            "required": true
          },
          {
            "name": "Requirement",
            "max_length": 150,
            "required": true
          },
          {
            "name": "Category",
            "allowed_values": [
              "Security Architecture",
              "API Security",
              "Authentication & Authorization",
              "Data Protection",
              "Network Security",
              "Secret Management",
              "Compliance & Auditing",
              "Threat Protection",
              "Security Monitoring"
            ],
            "required": true
          },
          {
            "name": "Status",
            "allowed_values": ["Compliant", "Non-Compliant", "Not Applicable", "Unknown"],
            "required": true
          },
          {
            "name": "Source Section",
            "pattern": "^(\\d+\\.\\d+|Not documented)$",
            "required": true
          },
          {
            "name": "Responsible Role",
            "required": true
          }
        ]
      }
    },
    "status_value_standardization": {
      "enabled": true,
      "severity": "BLOCKING",
      "allowed_values": ["Compliant", "Non-Compliant", "Not Applicable", "Unknown"],
      "case_sensitive": true,
      "common_errors": {
        "compliant": "Compliant",
        "non-compliant": "Non-Compliant",
        "not applicable": "Not Applicable",
        "unknown": "Unknown",
        "N/A": "Not Applicable",
        "Pass": "Compliant",
        "Fail": "Non-Compliant"
      }
    },
    "appendix_structure": {
      "enabled": true,
      "severity": "BLOCKING",
      "required_appendices": ["A.1", "A.2", "A.3", "A.4"],
      "strict_order": true
    },
    "compliance_calculation": {
      "enabled": true,
      "severity": "BLOCKING",
      "total_requirements": 56,
      "percentage_tolerance": 0,
      "completeness_tolerance": 1
    },
    "template_completeness": {
      "enabled": true,
      "severity": "BLOCKING",
      "required_sections": [
        "header",
        "document_control",
        "compliance_summary",
        "overall_compliance",
        "appendix_a1_a4",
        "dynamic_sections"
      ]
    }
  },
  "error_messages": {
    "table_row_count_mismatch": "Security Architecture requires exactly 56 requirement rows across 8 security domains. Found {actual} rows."
  }
}
